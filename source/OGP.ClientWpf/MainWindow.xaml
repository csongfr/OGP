<Window x:Class="OGP.ClientWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ad="clr-namespace:AvalonDock;assembly=AvalonDock"
        Title="OGP" WindowState="Maximized">

    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Fichier">
                <MenuItem Header="_Quitter"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="Barre de statut"/>
        </StatusBar>
        <ad:DockingManager>
            <ad:ResizingPanel>
                <ad:DockablePane ad:ResizingPanel.ResizeWidth="300">
                    <ad:DockableContent Title="Test1">test</ad:DockableContent>
                    <ad:DockableContent Title="Test2">test</ad:DockableContent>
                </ad:DockablePane>
                <ad:DocumentPane>
                    <ad:DocumentContent Title="Test3">test</ad:DocumentContent>
                </ad:DocumentPane>
            </ad:ResizingPanel>
        </ad:DockingManager>
    </DockPanel>
</Window>
